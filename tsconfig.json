{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2018",
        "allowJs": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "declaration": true,
        "baseUrl": ".",
    },
    "include": [
        "packages/*/src/**/*.ts"
    ],
    "exclude": [
        "**/__tests__/**",
        "scripts/**"
    ]
}
