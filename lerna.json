{
  "packages": [
    "packages/*",
    "showcase/*"
  ],
  "version": "4.0.0",
  "npmClient": "yarn",
  "exact": true,
  "command": {
    "version": {
      "allowBranch": [
        "master"
      ],
      "ignoreChanges": [
        "**/*.md",
        "**/example/**",
        "**/__tests__/**",
        "**/.eslintrc.cjs",
        "**/jest.config.js",
        "**/tsconfig.json"
      ]
    },
    "publish": {
      "message": "chore(release): publish %s"
    }
  }
}
