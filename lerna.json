{
  "packages": [
    "packages/*"
  ],
  "version": "1.0.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "exact": true,
  "command": {
    "version": {
      "allowBranch": "master",
      "ignoreChanges": [
        "**/*.md",
        "**/example/**",
        "**/__tests__/**",
        "**/.eslintrc.js",
        "**/jest.config.js",
        "**/tsconfig.json"
      ]
    },
    "publish": {
      "message": "chore(release): publish %s"
    }
  }
}
