{
  "packages": [
    "packages/*",
    "showcase/*"
  ],
  "version": "6.0.2",
  "npmClient": "pnpm",
  "exact": true,
  "command": {
    "version": {
      "allowBranch": [
        "master",
        "v6"
      ],
      "ignoreChanges": [
        "**/*.md",
        "**/example/**",
        "**/__tests__/**",
        "**/.eslintrc.cjs",
        "**/jest.config.js",
        "**/tsconfig.json"
      ]
    },
    "publish": {
      "message": "chore(release): publish %s"
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
