{
    "include": [
        "src",
        "*.ts"
    ],
    "compilerOptions": {
        "module": "esnext",
        "target": "es2018",
        "outDir": "dist",
        "noEmit": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": false,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "keyofStringsOnly": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
